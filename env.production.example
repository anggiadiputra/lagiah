# Database Configuration
MYSQL_ROOT_PASSWORD=your-secure-mysql-root-password
MYSQL_DATABASE=lagiah_prod
MYSQL_USER=lagiah_user
MYSQL_PASSWORD=your-secure-mysql-user-password
DATABASE_URL=mysql://lagiah_user:your-secure-mysql-user-password@mysql:3306/lagiah_prod

# NextAuth Configuration
NEXTAUTH_SECRET=your-super-secret-production-key-change-this
NEXTAUTH_URL=https://lagiah.com

# Redis Configuration
REDIS_URL=redis://redis:6379

# API Configuration
WHOIS_API_URL=https://api.whois.com
WHOIS_API_KEY=your-whois-api-key

# WhatsApp API (optional)
WHATSAPP_API_URL=https://api.whatsapp.com
WHATSAPP_API_KEY=your-whatsapp-api-key

# Security
JWT_SECRET=your-jwt-secret-key-change-this
ENCRYPTION_KEY=your-32-character-encryption-key

# Logging
LOG_LEVEL=info
NODE_ENV=production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS=https://lagiah.com,https://www.lagiah.com

# SSL/TLS (if using Let's Encrypt)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem 