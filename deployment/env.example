# Lagiah Environment Variables Example
# Copy this file to .env.production and update with your actual values

# Database Configuration
DATABASE_URL="postgresql://lagiah_user:lagiah_password@localhost:5432/lagiah_db"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
NEXTAUTH_SECRET="your-nextauth-secret-change-this-in-production"
NEXTAUTH_URL="https://yourdomain.com"

# WhatsApp API Configuration (Optional)
WHATSAPP_API_URL="https://api.whatsapp.com"
WHATSAPP_API_KEY="your-whatsapp-api-key"

# Redis Configuration (Optional, for caching)
REDIS_URL="redis://localhost:6379"

# Application Settings
NODE_ENV="production"
PORT=3004

# Frontend Environment Variables
VITE_API_BASE_URL="https://yourdomain.com/api/v1"
VITE_APP_NAME="Lagiah"
VITE_APP_VERSION="1.0.0"

# Email Configuration (Optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# File Upload Configuration (Optional)
UPLOAD_MAX_SIZE="10MB"
UPLOAD_PATH="/var/www/lagiah/uploads"

# Security Settings
CORS_ORIGIN="https://yourdomain.com"
RATE_LIMIT_WINDOW="15m"
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring (Optional)
SENTRY_DSN="your-sentry-dsn"
LOG_LEVEL="info" 